---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: velero-{{ namespace }}
  namespace: {{ mig_namespace }}
  labels:
    component: velero
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: Role
metadata:
  name: migration-velero
  namespace: {{ namespace }}
rules:
- apiGroups:
  - build.openshift.io
  - migration.openshift.io
  - rbac.authorization.k8s.io
  - velero.io
  resources:
  - '*'
  verbs:
  - '*'
- apiGroups:
  - ""
  resources:
  - serviceaccounts
  verbs:
  - '*'
- apiGroups:
  - packages.operators.coreos.com
  resources:
  - packagemanifests
  verbs:
  - '*'
- apiGroups:
  - '*'
  resources:
  - '*'
  verbs:
  - get
  - watch
  - list
  - update
  - patch
  - create
  - delete
  - assign
  - deletecollection
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: RoleBinding
metadata:
  name: migration-velero
  namespace: {{ namespace }}
  labels:
    component: velero
subjects:
  - kind: ServiceAccount
    namespace: {{ mig_namespace }}
    name: velero-{{ namespace }}
roleRef:
  kind: ClusterRole
  name: migration-velero
  apiGroup: rbac.authorization.k8s.io
