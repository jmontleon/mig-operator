---
apiVersion: v1
kind: Namespace
metadata:
  labels:
    control-plane: controller-manager
    controller-tools.k8s.io: "1.0"
  name: {{ mig_namespace }}
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: mig
  namespace: {{ mig_namespace }}
  labels:
    component: mig
{% if dedicated_admin_mode == false %}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: mig-cluster-admin
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
- kind: ServiceAccount
  name: mig
  namespace: {{ mig_namespace }}
{% endif %}
