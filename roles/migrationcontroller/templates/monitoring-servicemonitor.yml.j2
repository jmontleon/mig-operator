apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  labels:
    app: mig-controller
  name: mig-controller
  namespace: {{ mig_namespace }}
spec:
  endpoints:
  - interval: 30s
    port: metrics
  jobLabel: app
  namespaceSelector:
    matchNames:
    - {{ mig_namespace }}
  selector:
    matchLabels:
      app: mig-controller
